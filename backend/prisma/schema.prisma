generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name String
  password  String
  phoneNumber String @unique
  refreshToken String? // Optional, no uniqueness (multiple nulls allowed)
  createdAt DateTime @default(now()) //stores exact time when user was created ; set once ; never set automatically
  updatedAt DateTime @updatedAt //store the lastes time when it was updated; automatically update by prisma
  
  // Relationships
  onRampTxns OnRampTx[]
  balances Balance? //user wallet balance -> Rule in fintech: wallet exists before money exists. -> make it optinal if not made it will throw prisma error

  //Ledger 
  ledgerEntries  TransactionLedger[]

  //P2P Transaction -> separate realtions for sent/received
  sentTransfers P2PTransfer[] @relation("SentTransfers") //all P2P transactions this user sent
  receivedTransfers  P2PTransfer[] @relation("ReceivedTransfers") //all P2P transactions this user received
}

//User's wallet balance
model Balance {
  id Int @id @default(autoincrement())
  userId Int @unique
  user User @relation(fields: [userId], references: [id])

  amount Int// available balance
  locked Int//Money in pending transactions
  
  createdAt DateTime @default(now())
  lastUpdated DateTime @updatedAt
}

//adding money from bank
model OnRampTx {
  id Int @id @default(autoincrement())
  token String @unique // Unique identifier form payment provider
  //Tx Status
  status OnRampStatus @default(Processing)

  //Financial Details
  amount Int

  //Payment Provider Details
  provider String //"HDFC" "SBI"

  //Timeline Details
  startTime DateTime @default(now()) //When user initiated

  // Relationship
  userId Int
  user User @relation(fields: [userId], references: [id])

  //ledger
  ledgerEntries TransactionLedger[] // One credit entry for the user
}

//P2P Transfer
model P2PTransfer{
  id Int @id @default(autoincrement())

  //Sender & Reciever
  senderId Int
  sender User @relation("SentTransfers",fields: [senderId], references: [id])

  receiverId  Int
  receiver User @relation("ReceivedTransfers", fields: [receiverId], references: [id])

  //Transaction Details
  amount Int

  //Status Management
  status P2PTransferStatus @default(PENDING) 

  //Idempotency - Prevent duplicate transactions
  idempotencyKey String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //Related ledger Enteries
  ledgerEntries   TransactionLedger[] // Debit for sender, credit for receiver

}

// Transaction ledger
model TransactionLedger{
  id Int @id @default(autoincrement())

  //Link user to transaction
  userId Int
  user User @relation(fields: [userId], references: [id])

  transactionType LedgerTransactionType

  direction LedgerDirection

  amount Int
  
  createdAt DateTime @default(now())  

  p2pTransferLedger Int?
  p2pTransfer P2PTransfer? @relation(fields: [p2pTransferLedger], references: [id])

  onRampTxLedger Int?
  onRampTx OnRampTx? @relation(fields: [onRampTxLedger], references: [id])
}

// Enums for better type safety
enum OnRampStatus {
  Processing
  Success
  Failed
}

enum P2PTransferStatus {
  PENDING
  COMPLETED    // Successfully transferred
  FAILED       // Transfer failed
  
}

enum LedgerTransactionType {
  P2P_TRANSFER
  ONRAMP
}

enum LedgerDirection{
  DEBIT 
  CREDIT
}

